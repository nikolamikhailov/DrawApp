<?xml version="1.0" encoding="utf-8"?>
<com.example.drawapp.uimodel.ToolsLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="@color/background_tools"
    app:contentPadding="4dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/toolsList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_tool"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"/>

</com.example.drawapp.uimodel.ToolsLayout>


